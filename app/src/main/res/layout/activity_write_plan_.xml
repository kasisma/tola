<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.Write_plan_Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D4E4D0"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#7CDC86"
                android:minHeight="?attr/actionBarSize"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:title="일정추카" />

            <TextView
                android:id="@+id/tv_plan_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="2020-02-20"
                android:textSize="40dp" />

            <EditText
                android:id="@+id/et_plan_title"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#ffffff"
                android:layout_marginTop="30dp"
                android:ems="10"
                android:textSize="30dp"
                android:hint="제목을 입력해주세요"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="( 1자/30자)" />

            <CheckBox
                android:id="@+id/cv_time_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="20dp"
                android:text="알람설정"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/et_plan_content"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:layout_gravity="center"
                android:gravity="top"
                android:background="#ffffff"
                android:hint="내용" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="알람시간"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"

                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:text="알람시간" />
            </LinearLayout>

            <Button
                android:layout_marginTop="30dp"

                android:id="@+id/btn_plan_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bolder_style3"
                android:text="일정등록" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>